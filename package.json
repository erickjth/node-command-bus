    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "codecov": "^3.0.1",
    "eslint-config-airbnb-standard": "^1.6.6",
    "flow-bin": "^0.70.0",
    "mocha": "^5.1.1",
    "nyc": "^11.7.1"
